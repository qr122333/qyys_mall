/* pages/index-storewide/index-storewide.wxss */

.seek{
  position: relative;
}
#seo {
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
  width: 630rpx;
  margin: 15rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  border: none;
  background-color: #fff;
}
#tabType{
  position:absolute;
  top:-15rpx;
  right:0;
  width:60rpx;
  height:60rpx;
  padding:18rpx 20rpx;
}
#tabType>image{
  width: 100%;
  height: 100%;
}
.goodsTab{
  overflow: hidden;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
}
.goodsTab>view{
  float: left;
  height: 80rpx;
  line-height:80rpx;
  width: 20%;
  font-size: 28rpx;
  text-align: center;
  border-right: 1rpx solid #e5e5e5;
  box-sizing: border-box;
}
.goodsTab>view:last-child{
  border-right:none;
}
.goodsTabColor{
  color: #fa4f52;
}
.goodsTabSliding{
  width:20%;
  height: 5rpx;
  background-color: #fa4f52;
  margin-top: -5rpx;
  position: relative;
  transition: all 0.3s;
}
.article{
  position: relative;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
  height: 160rpx;
  font-size: 28rpx;
}
.goodsImg{
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  top: 10rpx;
  left: 30rpx;
  box-sizing: border-box;
  border: 1rpx solid #e5e5e5;
}
.goodsImg image{
  width: 100%;
  height: 100%;
}
.Description{
  margin-left: 200rpx;
  height: 100%;
  position: relative;
}
.goodsName{
  color: #666;
  position: absolute;
  top: 10rpx;
  padding-right: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.goodsPrice{
  position: absolute;
  bottom: 10rpx;
  color: #fa4f52;
}
.goodsSales{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #999;
  font-size: 22rpx;
}
.merchandise{
  position: absolute;
  top: 170rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
}
.article navigator{
  display: block;
  height: 100%;
  position: relative;
}

/* 第二套样式 */
.merchandiseModel .article{
  width: 50%;
  float: left;
  height:500rpx;
  box-sizing: border-box;
}
.merchandiseModel .article:nth-child(odd){
  border-right: 1rpx solid #e5e5e5;
}
.merchandiseModel .goodsImg{
  width: 345rpx;
  height: 345rpx;
  left: 15rpx;
  left: 15rpx;
}
.merchandiseModel .Description{
  margin-left: 0;
}
.merchandiseModel .goodsName{
  padding-left:10rpx;
  top: 360rpx;
}
.merchandiseModel .goodsPrice{
  left: 10rpx;
}
/* 第二套样式Esc */
#returnTop{
  background-color:rgba(0, 0, 0, 0.4);
  position:absolute;
  bottom:50rpx;
  right:0;
  height:80rpx;
  width:100rpx;
  border-top-left-radius: 5rpx;
  border-bottom-left-radius: 5rpx;
}
#returnTop image{
  width: 40rpx;
  height: 40rpx;
  display: block;
  margin: 20rpx 15rpx;
}